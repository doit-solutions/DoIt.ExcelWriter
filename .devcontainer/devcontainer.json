{
    "name": "do IT Excel Writer",
    "image": "mcr.microsoft.com/devcontainers/dotnet:8.0-jammy",
    "features": {},
    "containerEnv": {
        "SHELL": "/bin/zsh"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "editor.fontFamily": "'Cascadia Code PL', monospace",
                "editor.fontLigatures": true,
                "editor.formatOnSave": true
            },
            "extensions": [
                "ms-dotnettools.vscodeintellicode-csharp",
                "editorconfig.editorconfig",
                "eamodio.gitlens",
                "dotjoshjohnson.xml"
            ]
        }
    },
    "onCreateCommand": "git config --global --add safe.directory /workspaces/Sakra.Spar.Strivo2Xlsx && dotnet tool install --global dotnet-outdated-tool"
}
